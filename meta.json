{
  "version": "3.0.0",
  "metadata": {
    "id": "code-react",
    "name": "React Frontend",
    "kind": "code",
    "layers": [
      "frontend",
      "cicd"
    ],
    "type": "react",
    "description": "Modern React application with TypeScript and Vite",
    "version": "1.0.0",
    "author": "Genesis Team",
    "tags": [
      "react",
      "typescript",
      "vite",
      "frontend"
    ]
  },
  "scaffoldConfigTemplate": [
    {
      "key": "reactVersion",
      "label": "React Version",
      "type": "select",
      "options": [
        "18",
        "19"
      ],
      "default": "18",
      "required": true,
      "description": "React library version",
      "category": "build"
    },
    {
      "key": "useTypeScript",
      "label": "Use TypeScript",
      "type": "boolean",
      "default": true,
      "required": false,
      "description": "Use TypeScript instead of JavaScript",
      "category": "build"
    },
    {
      "key": "buildTool",
      "label": "Build Tool",
      "type": "select",
      "options": [
        "vite",
        "create-react-app"
      ],
      "default": "vite",
      "required": true,
      "description": "Build tool for the React application",
      "category": "build"
    }
  ],
  "dependencies": {
    "npm": {
      "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
      },
      "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.0.0",
        "typescript": "^5.0.0",
        "vite": "^5.0.0"
      }
    }
  },
  "runtimeConfigFiles": {
    "default": "frontend/.env",
    "env": "frontend/.env.{{env}}"
  },
  "runtimeConfigTemplate": [
    {
      "key": "VITE_APP_NAME",
      "description": "Application name",
      "example": "{{projectName}}",
      "required": true,
      "secret": false,
      "targets": [
        "frontend"
      ]
    },
    {
      "key": "VITE_APP_HOST",
      "description": "Frontend application URL",
      "example": "https://{{projectName}}{{envSuffix}}.{{domain}}",
      "required": true,
      "secret": false,
      "targets": [
        "frontend"
      ]
    },
    {
      "key": "VITE_API_BASE",
      "description": "Backend API base URL",
      "example": "https://{{projectName}}-api{{envSuffix}}.{{domain}}",
      "required": true,
      "secret": false,
      "targets": [
        "frontend"
      ]
    }
  ],
  "generation": {
    "files": {
      "remove": []
    },
    "layers": {
      "frontend": {},
      "cicd": {}
    }
  },
  "gitignore": [
    "# React / Vite / Node.js",
    "node_modules/",
    "dist/",
    "dist-ssr/",
    "*.local",
    "",
    "# Logs",
    "logs",
    "*.log",
    "npm-debug.log*",
    "yarn-debug.log*",
    "yarn-error.log*",
    "pnpm-debug.log*",
    "lerna-debug.log*",
    "",
    "# Environment variables",
    ".env.local",
    ".env.development.local",
    ".env.test.local",
    ".env.production.local",
    "",
    "# Editor files",
    ".vscode/*",
    "!.vscode/extensions.json",
    ".idea",
    "*.suo",
    "*.ntvs*",
    "*.njsproj",
    "*.sln",
    "*.sw?",
    "",
    "# OS files",
    ".DS_Store",
    "Thumbs.db"
  ]
}
