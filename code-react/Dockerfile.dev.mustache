FROM node:{{#nodeVersion}}{{{nodeVersion}}}{{/nodeVersion}}{{^nodeVersion}}20{{/nodeVersion}}-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy application code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Run development server with host binding for Docker
