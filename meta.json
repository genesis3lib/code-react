{
  "version": "3.0.0",
  "metadata": {
    "id": "code-react",
    "name": "React Frontend",
    "kind": "code",
    "layers": [
      "frontend",
      "cicd"
    ],
    "type": "react",
    "description": "Modern React application with TypeScript and Vite",
    "version": "1.0.0",
    "author": "Genesis Team",
    "tags": [
      "react",
      "typescript",
      "vite",
      "frontend"
    ],
    "providers": ["aws"]
  },
  "scaffoldConfigTemplate": [
    {
      "key": "reactVersion",
      "label": "React Version",
      "type": "select",
      "options": ["18", "19"],
      "optionNotes": {
        "18": { "notes": "Stable LTS - broad ecosystem compatibility" },
        "19": { "notes": "Latest - recommended for new projects" }
      },
      "default": "19",
      "required": true,
      "description": "React library version",
      "category": "build"
    },
    {
      "key": "useTypeScript",
      "label": "Use TypeScript",
      "type": "boolean",
      "default": true,
      "required": false,
      "description": "Use TypeScript instead of JavaScript",
      "category": "build"
    },
    {
      "key": "buildTool",
      "label": "Build Tool",
      "type": "select",
      "options": ["vite", "create-react-app"],
      "optionNotes": {
        "vite": { "notes": "Fast, modern - recommended" },
        "create-react-app": { "notes": "Legacy, slower builds" }
      },
      "default": "vite",
      "required": true,
      "description": "Build tool for the React application",
      "category": "build"
    }
  ],
  "dependencies": {
    "npm": {
      "dependencies": {
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-router-dom": "^7.9.6",
        "axios": "^1.13.2",
        "tailwindcss": "^4.1.17",
        "lucide-react": "^0.554.0",
        "react-redux": "^9.2.0",
        "react-error-boundary": "^6.0.0",
        "tailwind-merge": "^3.4.0",
        "@tailwindcss/vite": "^4.1.17",
        "@reduxjs/toolkit": "^2.10.1",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1"
      },
      "devDependencies": {
        "@types/react": "^19.2.0",
        "@types/react-dom": "^19.2.0",
        "@vitejs/plugin-react": "^4.0.0",
        "typescript": "^5.0.0",
        "vite": "^5.0.0",
        "@tailwindcss/postcss": "^4.1.17",
        "autoprefixer": "^10.4.22",
        "postcss": "^8.5.6"
      }
    }
  },
  "runtimeConfigFiles": {
    "default": "frontend/.env",
    "env": "frontend/.env.{{env}}"
  },
  "runtimeConfigTemplate": [
    {
      "key": "VITE_APP_NAME",
      "description": "Application name",
      "example": "{{projectName}}",
      "default": "runtime",
      "required": true,
      "secret": false,
      "targets": [
        "frontend"
      ],
      "commonForAllEnv": true
    },
    {
      "key": "VITE_APP_HOST",
      "description": "Frontend application URL",
      "example": "https://{{projectName}}{{envSuffix}}.{{domain}}",
      "default": "runtime",
      "required": true,
      "secret": false,
      "targets": [
        "frontend"
      ],
      "commonForAllEnv": false
    },
    {
      "key": "VITE_API_BASE",
      "description": "Backend API base URL",
      "example": "https://{{projectName}}-api{{envSuffix}}.{{domain}}",
      "default": "runtime",
      "required": true,
      "secret": false,
      "targets": [
        "frontend"
      ],
      "commonForAllEnv": false
    }
  ],
  "generation": {
    "files": {
      "remove": [
        "README.md"
      ]
    },
    "layers": {
      "frontend": {},
      "cicd": {}
    }
  },
  "transformations": {
    "replacements": [
      {
        "files": [
          "index.html"
        ],
        "operations": [
          {
            "find": "<title>project</title>",
            "replace": "<title>{{{projectName}}}</title>"
          }
        ]
      }
    ]
  },
  "gitIgnore": {
    "react": [
      "# Local development",
      ".pids/",
      ".logs/",
      "",
      "# React / Vite / Node.js",
      "node_modules/",
      "dist/",
      "dist-ssr/",
      "*.local",
      "",
      "# Logs",
      "logs",
      "*.log",
      "npm-debug.log*",
      "yarn-debug.log*",
      "yarn-error.log*",
      "pnpm-debug.log*",
      "lerna-debug.log*",
      "",
      "# Environment variables",
      ".env.local",
      ".env.development.local",
      ".env.test.local",
      ".env.production.local",
      ".env.secrets.*",
      "",
      "# Editor files",
      ".vscode/*",
      "!.vscode/extensions.json",
      ".idea",
      "*.suo",
      "*.ntvs*",
      "*.njsproj",
      "*.sln",
      "*.sw?",
      "",
      "# OS files",
      ".DS_Store",
      "Thumbs.db"
    ]
  }
}